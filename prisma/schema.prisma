generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkdayOpen {
  employeeId String   @id
  startTime  DateTime
  createdAt  DateTime @default(now())

  @@map("workday_open")
}

model WorkdayHistory {
  id         String   @id @default(uuid())
  employeeId String
  startTime  DateTime
  endTime    DateTime?

  workedMinutes   Int
  expectedMinutes Int
  deltaMinutes    Int

  lateArrival Boolean
  earlyLeave  Boolean

  createdAt DateTime @default(now())

  periodId String
  period   WorkPeriod @relation(fields: [periodId], references: [id])

  adjustments WorkdayAdjustment[]

  @@map("workday_history")
}

model WorkdayRules {
  id          String   @id @default(uuid())
  baseMinutes Int
  createdAt   DateTime @default(now())

  breaks WorkdayBreak[]
}

model WorkdayBreak {
  id      String @id @default(uuid())
  rulesId String
  start   String
  end     String

  rules WorkdayRules @relation(fields: [rulesId], references: [id])
}

model WorkdayAdjustment {
  id         String   @id @default(uuid())
  historyId  String
  type       String
  minutes    Int
  reason     String
  approvedBy String
  createdAt  DateTime @default(now())

  history WorkdayHistory @relation(fields: [historyId], references: [id])

  @@map("workday_adjustment")
}

model WorkPeriod {
  id        String   @id @default(uuid())
  year      Int
  month     Int
  half      Int
  startDate DateTime
  endDate   DateTime

  closedAt DateTime?
  closedBy String?

  histories WorkdayHistory[]

  @@unique([year, month, half])
}

enum UserRole {
  EMPLOYEE
  ADMIN
}

model User {
  id                String    @id @default(uuid())
  document          String    @unique
  passwordHash      String
  role              String
  active            Boolean   @default(true)
  pinHash           String?
  failedPinAttempts Int       @default(0)
  pinLockedUntil    DateTime?

  firstName         String?
  lastName          String?
  phone             String?
  email             String?
  
  createdAt        DateTime  @default(now())

  @@map("users")
}

enum AdminCaseType {
  INCAPACITY
  PERMISSION
  JUSTIFICATION
  ABSENCE
}

enum AdminCaseStatus {
  DRAFT
  APPLIED
  CANCELLED
}

model AdminCase {
  id           String          @id @default(uuid())
  employeeId   String
  type         AdminCaseType
  status       AdminCaseStatus @default(DRAFT)
  reasonCode   String?
  notes        String?
  createdBy    String
  createdAt    DateTime @default(now())
  appliedBy    String?
  appliedAt    DateTime?
  cancelledBy  String?
  cancelledAt  DateTime?
  cancelReason String?

  scopes       AdminCaseScope[]

  @@index([employeeId])
  @@index([status])
  @@map("admin_case")
}

model AdminCaseScope {
  id               String    @id @default(uuid())
  adminCaseId      String
  adminCase        AdminCase @relation(fields: [adminCaseId], references: [id], onDelete: Cascade)
  date             DateTime
  startMinute      Int?
  endMinute        Int?
  workdayHistoryId String?
  createdAt        DateTime  @default(now())

  @@index([date])
  @@index([adminCaseId, date])
  @@map("admin_case_scope")
}

model AuditEvent {
  id           String  @id @default(uuid())
  entityType   String
  entityId     String
  action       String
  performedBy  String
  metadata     Json?
  createdAt    DateTime @default(now())

  @@index([entityType, entityId])
  @@index([performedBy])
}